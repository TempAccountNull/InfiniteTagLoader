<UserControl x:Class="InfiniteTagLoader.Controls.TagReference"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfiniteTagLoader.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="500">
    <Control.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/z_dark.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Control.Resources>
    <Grid Margin="5,5,5,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="105"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tagID" Grid.Column="0" IsReadOnly="True" Height="25" Width="70" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#202020" BorderBrush="#404040"/>
        <ComboBox x:Name="tagType" Grid.Column="1" Width="100" Height="25" HorizontalAlignment="Left"/>
        <ComboBox x:Name="tags" Grid.Column="2" Height="25" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
